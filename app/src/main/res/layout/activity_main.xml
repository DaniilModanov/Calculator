<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnBackspace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button2"
        android:gravity="center"
        android:text="@string/backspace_string"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/btnPoint"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/btnMultiply"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button1"
        android:gravity="center"
        android:text="1"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/btnLeftBracket"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button1"
        android:gravity="center"
        android:text="2"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/btn0"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintWidth_percent="0.25" />


    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button1"
        android:gravity="center"
        android:text="3"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/btn0"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintWidth_percent="0.25" />


    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button1"
        android:gravity="center"
        android:text="4"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/btn1"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button1"
        android:gravity="center"
        android:text="5"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/btn2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/btn4"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnPoint"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button2"
        android:gravity="center"
        android:text="."
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/btnMinus"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/btn9"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnLeftBracket"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button1"
        android:gravity="center"
        android:text="("
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnRightBracket"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button1"
        android:gravity="center"
        android:text=")"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/btnLeftBracket"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button1"
        android:gravity="center"
        android:text="0"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/btnRightBracket"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button1"
        android:gravity="center"
        android:text="6"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/btn3"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/btn5"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button1"
        android:gravity="center"
        android:text="7"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/btn4"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button1"
        android:gravity="center"
        android:text="8"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/btn5"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/btn7"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button1"
        android:gravity="center"
        android:text="9"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/btn6"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/btn8"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button2"
        android:gravity="center"
        android:text="+"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/btnEqual"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/btn3"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button2"
        android:gravity="center"
        android:text="-"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/btnPlus"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/btn6"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button2"
        android:gravity="center"
        android:text="="
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/btn0"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button2"
        android:gravity="center"
        android:text="/"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/btn8"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/btnClear"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button2"
        android:gravity="center"
        android:text="*"
        android:textSize="40sp"

        app:layout_constraintBottom_toTopOf="@id/btn9"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/btnDivide"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button2"
        android:gravity="center"
        android:text="C"
        android:textSize="40sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/btn7"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/resTV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom|right"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp"
        android:textSize="50sp"
        android:textColor="@color/colorObject1"
        app:layout_constraintBottom_toTopOf="@id/btnClear"
        app:layout_constraintHeight_percent="0.1" />

    <TextView
        android:id="@+id/inputTV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom|right"
        android:paddingEnd="10dp"
        android:textColor="@color/colorObject1"
        android:paddingBottom="10dp"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/inputTV"
        app:layout_constraintHeight_percent="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>